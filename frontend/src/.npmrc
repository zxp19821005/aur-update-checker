# pnpm 配置
auto-install-peers=true
lockfile=true
save-exact=true
shamefully-hoist=true
node-linker=hoisted
network-concurrency=32
strict-peer-dependencies=false
link-workspace-packages=true
fetch-retry-maxtimeout=10000
cache-dir=/run/media/zxp/LocalBak/git/aur-update-checker/.pnpm_cache
store-dir=/run/media/zxp/LocalBak/git/aur-update-checker/.pnpm_store
virtual-store-dir=/run/media/zxp/LocalBak/git/aur-update-checker/.pnpm_store
virtual-store-dir-max-length=80
# 国内镜像配置
registry=https://registry.npmmirror.com/
disturl=https://npmmirror.com/mirrors/node

# 二进制包镜像
chromedriver-cdnurl=https://npmmirror.com/mirrors/chromedriver
gl-binary-host-mirror=https://npmmirror.com/mirrors/gl/v{version}
